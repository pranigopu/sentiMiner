{
    "manifest_version": 3,
    "version": "1",
    "name": "Poppy",
    "description": "Learning more about pop-ups in Chrome extensions.",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Poppy"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "permissions": ["tabs"],
    "background": {
        "service_worker": "background.js"
    }
}