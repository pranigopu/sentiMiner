{
    "manifest_version": 3,
    "version": "1",
    "name": "Backache",
    "description": "Learning to use background service workers.",
    "action": {
        "default_icon": "icon.png", 
        "default_title": "Backache"
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}
